<?xml version="1.0" encoding="utf-8" ?>
<widget id="PasswordInput.widget.PasswordInput" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>PasswordInput</name>
    <description>Password-rules validation field</description>

    <icon />

    <properties>
        <property key="passwordAttr" type="attribute">
            <caption>Password Attribute</caption>
            <category>General</category>
            <description>The attribute to put the entered password in</description>
            <attributeTypes>
                <attributeType name="String" />
            </attributeTypes>
        </property>
        <property key="minCharacters" type="integer" defaultValue="1">
            <caption>Minimum characters</caption>
            <category>Rules</category>
            <description>Minimum amount of characters</description>
        </property>
        <property key="minCharactersAttr" type="attribute" required="false">
            <caption>Minimum attribute</caption>
            <category>General</category>
            <description>Minimum amount of characters; overrides hardcoded setting</description>
            <attributeTypes>
                <attributeType name="Integer" />
            </attributeTypes>
        </property>
        <property key="requireUpper" type="boolean" defaultValue="false">
            <caption>Uppercase character</caption>
            <category>Rules</category>
            <description>Require an uppercase character in the password</description>
        </property>
        <property key="requireUpperAttr" type="attribute" required="false">
            <caption>Uppercase attribute</caption>
            <category>General</category>
            <description>Require an uppercase character in the password; overrides hardcoded setting</description>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="requireLower" type="boolean" defaultValue="false">
            <caption>Lowercase character</caption>
            <category>Rules</category>
            <description>Require a lowercase character in the password</description>
        </property>
        <property key="requireLowerAttr" type="attribute" required="false">
            <caption>Lowercase attribute</caption>
            <category>General</category>
            <description>Require a lowercase character in the password; overrides hardcoded setting</description>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="requireNumeric" type="boolean" defaultValue="false">
            <caption>Numeric character</caption>
            <category>Rules</category>
            <description>Require a numeric character in the password</description>
        </property>
        <property key="requireNumericAttr" type="attribute" required="false">
            <caption>Numeric attribute</caption>
            <category>General</category>
            <description>Require a numeric character in the password; overrides hardcoded setting</description>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="requireSpecial" type="boolean" defaultValue="false">
            <caption>Special character</caption>
            <category>Rules</category>
            <description>Minumum amount of characters</description>
        </property>
        <property key="requireSpecialAttr" type="attribute" required="false">
            <caption>Special attribute</caption>
            <category>General</category>
            <description>Require a special character in the password; overrides hardcoded setting</description>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="disallowUsername" type="boolean" defaultValue="true">
            <caption>Disallow username</caption>
            <category>Rules</category>
            <description>Disallow the use of the username as part of the password</description>
        </property>
        <property key="disallowUsernameAttr" type="attribute" required="false">
            <caption>Disallow username attribute</caption>
            <category>General</category>
            <description>Disallow the use of the username as part of the password; overrides hardcoded setting</description>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="allowPrevious" type="boolean" defaultValue="false">
            <caption>Previous password history</caption>
            <category>Rules</category>
            <description>Allow previous passwords to be used</description>
        </property>
        <property key="allowPreviousPasswords" type="attribute" required="false">
            <caption>Allow previous attribute</caption>
            <category>General</category>
            <description>Allow previous passwords to be used; overrides hardcoded setting</description>
            <attributeTypes>
                <attributeType name="Boolean" />
            </attributeTypes>
        </property>
        <property key="mfToExecute" type="microflow" required="true" defaultValue="">
            <caption>Persist microflow</caption>
            <category>Behavior</category>
            <description>The microflow used to perist password on Change button click</description>
            <returnType type="Boolean" />
        </property>
    </properties>
</widget>

